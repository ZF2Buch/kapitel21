namespace Cms\Service;

class CmsService implements CmsServiceInterface
{
    public function loadBlock($block)
    {
        $fileName = LUIGI_ROOT . '/data/cms/' . $block . '.html';

        if (!file_exists($fileName)) {
            return '';
        }

        $content = implode('', file($fileName));

        return $content;
    }
}
